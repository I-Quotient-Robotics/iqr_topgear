<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="robot_type"  default="scout"/>

  <!--- Run gmapping -->
  <include file="$(find iqr_topgear_navigation)/launch/include/gmapping.launch.xml">
    <arg name="scan_topic" default="/scan"/>
  </include>

  <!--- Run Move Base -->
  <include file="$(find iqr_topgear_navigation)/launch/include/move_base.launch">
    <arg name="robot_type"  value="$(arg robot_type)"/>
  </include>
  
  <!--rviz display-->
  <arg name="viz" default="false"/>
  <group if="$(arg viz)">
    <node pkg="rviz" type="rviz" name="rviz" args="-d $(find iqr_topgear_navigation)/rviz/mapping.rviz"/>
  </group>
  
</launch>