<?xml version="1.0" encoding="UTF-8"?>
<launch>

  <arg name="robot_type" default="scout"/>

  <arg name="rvizconfig" default="$(find iqr_topgear_description)/rviz/view_model.rviz"/>
  <arg name="model" default="$(find xacro)/xacro --inorder $(find iqr_topgear_description)/urdf/iqr_$(arg robot_type)_robot.urdf.xacro"/>

  <param name="robot_description" command="$(arg model)"/>

  <node name="joint_state_publisher" pkg="joint_state_publisher_gui" type="joint_state_publisher_gui"/>
  <node name="robot_state_publisher" pkg="robot_state_publisher" type="robot_state_publisher"/>

  <node name="rviz" pkg="rviz" type="rviz" args="-d $(arg rvizconfig)" required="true"/>

</launch>